<div class="main-container-login">

  <div class="main-container-login-box">

    <h1>sava</h1>

    <h2>Welcome!</h2>

    <p>Sign in by entering the information below</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label_html: { class: "login-sava-label"},
                    input_html: { autocomplete: "email", class: "login-sava" } %>
        <%= f.input :password,
                    label_html: { class: "login-sava-password"},
                    required: false,
                    input_html: { autocomplete: "current-password", class: "login-sava" } %>
        <%= f.input :remember_me, label_html: { class: "login-sava-label"}, as: :boolean if devise_mapping.rememberable? %>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Enter" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
